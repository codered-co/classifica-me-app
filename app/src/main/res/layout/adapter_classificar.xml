<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_empresa_adapter"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView_nome_empresa_adapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="42dp"
            app:srcCompat="@drawable/ic_pessoa" />

        <ImageView
            android:id="@+id/imageView_descricao_empresa_adapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="72dp"
            app:srcCompat="@drawable/ic_pessoa" />

        <ImageView
            android:id="@+id/imageView_local_empresa_adapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="102dp"
            app:srcCompat="@drawable/ic_location" />


        <ImageView
            android:id="@+id/imageView_tipo_empresa_adapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="135dp"
            app:srcCompat="@drawable/ic_dashboard_black_24dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView_empresa_adapter"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_pessoa"
            app:civ_border_width="5dp" />

        <TextView
            android:id="@+id/textView_nome_empresa_adapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="45dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_descricao_empresa_adapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="75dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_local_empresa_adapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="105dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_tipo_empresa_adapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="135dp"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/imageView_seta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@null"
            app:srcCompat="@drawable/ic_arrow" />
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>

